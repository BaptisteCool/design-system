	"devDependencies": {
		"@types/cross-spawn": "^6.0.0",
		"@types/figlet": "^1.2.0",
		"@types/node": "^11.13.2",
		"@types/yargs": "^13.0.0",
		"@typescript-eslint/eslint-plugin": "^1.7.0",
		"@typescript-eslint/parser": "^1.7.0",
		"eslint": "^5.16.0",
		"typescript": "^3.4.3",
		"yorkie": "^2.0.0"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
