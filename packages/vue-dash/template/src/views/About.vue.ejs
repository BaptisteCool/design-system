<template>
	<VLayout class="page">
		<VCard class="page-card py-4 layout column align-start">
			<h2 class="title font-weight-bold primary--text">
				{{ $t('views.about.title') }}
			</h2>

			<Links
				v-for="(data, index) in links"
				:key="index"
				:title="data.title"
				:links="data.links"
				class="mt-4"
			/>

			<VSpacer />

			<VBtn
				exact
				color="accent"
				outlined
				:to="$t('views.about.backBtn.url')"
			>
				<VIcon class="mr-2">
					{{ backArrowIcon }}
				</VIcon>

				{{ $t('views.about.backBtn.label') }}
			</VBtn>
		</VCard>
	</VLayout>
</template>

