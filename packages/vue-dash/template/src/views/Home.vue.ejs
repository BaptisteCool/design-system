<template>
	<VLayout class="page">
		<VCard class="page-card py-4 layout column align-start">
			<h2 class="title font-weight-bold primary--text mb-4">
				{{ $t('views.home.title') }}
			</h2>

			<p>{{ $t('views.home.description.block1') }}</p>

