{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"types": [
			"node",
			"figlet",
			"yargs",
			"cross-spawn"
		],
		"lib": [
			"es2018",
			"es2015",
			"scripthost"
		],
		"outDir": "dist"
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"demo"
	]
}
