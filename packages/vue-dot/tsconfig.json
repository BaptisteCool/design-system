{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./",
		"types": [
			"node",
			"jest"
		],
		"lib": [
			"es2017",
			"es2015",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"playground/**/*.ts",
		"playground/**/*.vue",
		"src/**/*.ts",
		"src/**/*.vue",
		"tests/**/*.ts",
		"scripts/**/*.ts",
		"*.json"
	],
	"exclude": [
		"node_modules"
	]
}
